#! /usr/bin/env python
# encoding: utf-8
from waflib import Utils

waf_arch_dict = {
    'arm'    : 'armhf',
    'aarch64': 'arm64',
    'x86_64' : 'amd64'
}

def build(ctx):

    deb_arch = waf_arch_dict[ctx.env.DEST_CPU]

    ctx(features='subst',
        source='control.in',
        target='control',
        always=True,
        arch=deb_arch
        )
